<% if current_account.role.role_name == 'Работник 1 линии' %>
  <div class="all_new_and_working_tickets_wrapper">
    <div class="all_new_tickets_wrapper tickets_container">
      <div class="new_tickets">
        <% if @new_tickets.any? %>
          <p>Новые заявки:</p>
          <% @new_tickets.each do |ticket| %>
            <div class="new_ticket_wrapper ticket_wrapper">
              <b>№<%= ticket.id %> <%= ticket.title %></b> <br>
              <span><%= ticket.body %></span> <br>
              <span> Клиент: ID: <%= ticket.account_id %> | Email: <%= ticket.account.email %> </span>
              <%= form_with(model: ticket, local: true) do |form| %>
                <%= form.hidden_field :responsible_id, value: current_account.id %>
                <%= form.hidden_field :ticket_status_id, value: 2 %>
                <%= form.submit 'Стать ответственным' %>
              <% end %>
              <%= form_with(model: ticket, local: true) do |form| %>
                <span>Статус заявки: <%= form.collection_select :ticket_status_id, TicketStatus.all, :id, :status_name, prompt: "Выберите статус" %></span>
                <%= form.submit 'Изменить статус' %>
              <% end %>
              <span>Создана: <%= ticket.created_at %></span>
              <br>
              <span>Обновлена: <%= ticket.updated_at %></span>
            </div>
          <% end %>
        <% else %>
          <p>Новых заявок не обанружено ╮(￣ω￣;)╭</p>
        <% end %>
      </div>
    </div>


    <div class="all_tickets_in_work_wrapper tickets_container">
      <% if @own_account_tickets.any? %>
        <p>Ваши заявки: </p>
        <% @own_account_tickets.each do |ticket| %>
          <div class="ticket_in_work_wrapper ticket_wrapper">
            <b>Заявка №<%= ticket.id %> <br> <%= ticket.title %></b>
            <span><%= ticket.body %></span>
            <span> Клиент: ID: <%= ticket.account_id %> | Email: <%= ticket.account.email %> </span>
            <%= form_with(model: ticket, local: true) do |form| %>
              <span>Статус заявки: <%= form.collection_select :ticket_status_id, TicketStatus.all, :id, :status_name, prompt: "Выберите статус" %></span>
              <%= form.submit 'Изменить статус' %>
            <% end %>
            <span>Создана: <%= ticket.created_at %></span>
            <span>Обновлена: <%= ticket.updated_at %></span>
          </div>
        <% end %>
      <% else %>
        <p>У вас нет заявок в работе ╮(￣ω￣;)╭</p>
      <% end %>
    </div>
  </div>
<% end %>
