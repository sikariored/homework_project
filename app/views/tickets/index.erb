<% if @allowed_roles.include?(current_account.role.role_name) %>
  <%= render 'all_tickets_show' %>
  <% elsif current_account.role_id == 6 %>
    <p></p>
  <% else %>
    <p>У вас недостаточно прав для просмотра всех заявок.</p>
<% end %>

<% if current_account.role_id == 3 %>
  <%= render 'line_1_tickets' %>
<% end %>

<%if ['"Работник 1 линии', 'Работник 2 линии', 'Работник 3 линии', 'Клиент'].include?(current_account.role.role_name) %>
  <p>Ваши заявки: </p>
<% else %>
  <p></p>
<% end %>

<% current_account.ticket.each do |ticket| %>
  <p style="border: 1px solid black; width: fit-content; padding-right: 100px;">
    <b><%= ticket.title %></b>
    <br>
    <span><%= ticket.body %></span>
    <br>
    <span>Статус заявки: <%= ticket.ticket_status.status_name %></span>
  </p>
<% end %>
