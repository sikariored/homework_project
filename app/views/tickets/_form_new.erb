<%= form_for @ticket do |f| %>
  <%= f.label :title, 'Заголовок' %>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :body, 'Описание проблемы' %>
  <%= f.text_area :body, size: '30x5' %>
  <br>
  <br>
  <%= f.hidden_field :account_id, value: current_account.id %>
  <%= f.hidden_field :ticket_status_id, value: TicketStatus.find_by(status_name: 'Новая')&.id %>

  <%= f.submit 'Создать заявку' %>
<% end %>